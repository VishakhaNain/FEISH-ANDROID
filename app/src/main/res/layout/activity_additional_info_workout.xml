<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Patient.AdditionalInfoWorkout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent2"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:text="Add More Information Of Workout "/>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_person_black_24dp"
            android:tint="@color/white"
            android:padding="8dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/sugar"
            android:entries="@array/workoutweek"
            android:layout_width="match_parent"
            android:hint="Average Sugar"
            android:textColor="#000000"
            android:background="@color/transparent"
            android:layout_height="match_parent"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_person_black_24dp"
            android:tint="@color/white"
            android:padding="8dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/bloodpressure"
            android:entries="@array/workoutweek"
            android:layout_width="match_parent"
            android:hint="Average Blood Pressure"
            android:background="@color/transparent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_person_black_24dp"
            android:tint="@color/white"
            android:padding="8dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/heartbeat"
            android:entries="@array/workoutweek"
            android:layout_width="match_parent"
            android:hint="Average HeartBeats"
            android:background="@color/transparent"
            android:layout_height="match_parent"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_person_black_24dp"
            android:tint="@color/white"
            android:padding="8dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/colestrol"
            android:entries="@array/workoutweek"
            android:layout_width="match_parent"
            android:hint="Average Colastrol"
            android:background="@color/transparent"
            android:layout_height="match_parent"
            />



    </LinearLayout>

    <Button
        android:id="@+id/submitdetails"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded"
        android:text="Submit Details"
        android:textColor="@color/white" />





</LinearLayout>