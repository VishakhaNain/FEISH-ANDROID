<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_marginRight="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_height="250dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/lightgray"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@color/colorAccent3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:id="@+id/Planname"
                android:layout_marginTop="8dp"
                android:textColor="#fff"
                android:text="SARTUP PLAN"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_gravity="right"
                android:layout_height="40dp"
                android:id="@+id/delete"
                android:tint="@color/white1"
                android:src="@android:drawable/ic_menu_delete"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="#fff"
                android:id="@+id/myImageView"
                app:civ_border_color="@color/white1"
                app:civ_border_width="5dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignLeft="@id/myImageView"
                android:layout_alignTop="@id/myImageView"
                android:layout_margin="1dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignRight="@id/myImageView"
                android:layout_alignBottom="@id/myImageView"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/planprice"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 5999.0"
                android:textColor="@color/colorAccent3" />
                <TextView
                    android:id="@+id/planvalidity"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 360 Days"
                    android:textColor="@color/colorAccent3" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <com.app.feish.application.customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:id="@+id/plandesc"
                android:textColor="@android:color/darker_gray"
                android:text="one Year Validity"/>
            <Button
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:id="@+id/buynow"
                android:text="Buy"
                android:layout_gravity="center"
                android:background="@drawable/rounded"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>