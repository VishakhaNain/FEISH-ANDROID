<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.FemaleInfo"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent2"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/information"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:text="Information Regarding"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/cardView"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pragnancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Create Data Of Pregnancy"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/cardView1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/femalecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Create Data Of Menstruation"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/cardView2"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pregnancyreport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="View Pregnancy Report"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/cardView3"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/femalecyclereport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="View Menstruation Report"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>