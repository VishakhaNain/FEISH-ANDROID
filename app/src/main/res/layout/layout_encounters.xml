<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="4dp"
    app:cardElevation="2dp"
    android:id="@+id/card_view"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.app.feish.application.customfonts.MyTextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:id="@+id/appoid"
        android:background="@color/colorAccent3"
        android:text="Appointment ID :202"
        android:textColor="@color/white"/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/ll"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:src="@drawable/doctor_images"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent3"
            android:textSize="16dp"
            android:text="Patient ID"
            android:id="@+id/patientid"
            android:layout_height="wrap_content" />
        <com.app.feish.application.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:text="Service Name"
            android:textColor="@color/yellow"
            android:id="@+id/servicename"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/darkblue"
            android:id="@+id/patientname"
            android:layout_marginTop="2dp"
            android:drawableTint="@android:color/black"
            android:text="Patient name"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:text=""
            android:id="@+id/donorbgrpp"
            android:textColor="@color/darkblue"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content" />
        <com.app.feish.application.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/darkblue"
            android:text="Timing"
            android:id="@+id/appotime"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:id="@+id/llaction"
    android:weightSum="4">
    <TextView
        android:layout_width="0dp"
        android:drawableTint="@color/grey"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/appobooked"
        android:drawableLeft="@drawable/valid"
        android:layout_weight="1"
        android:text="Booked"
        android:textColor="@color/grey"
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="0dp"
        android:drawableTint="@color/grey"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/apporesch"
        android:drawableLeft="@drawable/ic_add_alert_black_24dp"
        android:layout_weight="1"
        android:text="Reschedule"
        android:textColor="@color/grey"
        android:layout_height="match_parent" />
    <TextView
    android:layout_width="0dp"
        android:text="Confirm"
        android:layout_gravity="center"
        android:id="@+id/appoconfirm"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_weight="1"
        android:drawableLeft="@drawable/valid"
        android:drawableTint="@color/grey"
        android:background="@color/white"
    android:layout_height="match_parent" />
    <TextView
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:id="@+id/appocancel"
        android:gravity="center"
        android:drawableTint="@color/grey"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_weight="1"
        android:text="Cancel"
        android:textColor="@color/grey"
        android:layout_height="match_parent" />

</LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>