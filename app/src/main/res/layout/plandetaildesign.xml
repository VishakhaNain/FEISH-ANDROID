<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:background="@color/orange"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="4dp"
        android:id="@+id/plannamewithprice"
        android:layout_gravity="center"
        android:text="Plan Name"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <com.app.feish.application.customfonts.MyTextView
        android:layout_width="wrap_content"
        android:textSize="14dp"
        android:id="@+id/docname"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:layout_height="wrap_content" />

    <com.app.feish.application.customfonts.MyTextView
        android:layout_width="wrap_content"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:layout_height="wrap_content"
        android:id="@+id/planvalidity"
        android:layout_marginTop="2dp"/>

    <com.app.feish.application.customfonts.MyTextView
        android:layout_width="wrap_content"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:id="@+id/noofvisit"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:padding="4dp"
        android:background="@color/red"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:text="Purchase Plan"
        android:textColor="@color/white"
        android:id="@+id/purchasenow"
        android:layout_height="wrap_content" />

</LinearLayout>
</android.support.v7.widget.CardView>
