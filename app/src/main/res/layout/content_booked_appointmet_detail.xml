<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:background="@drawable/rounded_half">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_marginTop="15dp"
                android:id="@+id/img_back"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/doctor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:id="@+id/doc_name"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:id="@+id/doc_spe"
                    android:layout_gravity="center"
                    android:text=""/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="4dp"
                    android:id="@+id/doc_mob"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                    android:layout_gravity="center"
                    android:text=""/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:padding="4dp"
                        android:id="@+id/doc_email"
                        android:layout_marginTop="6dp"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:layout_gravity="center"
                        android:text=""/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/header"
            android:orientation="vertical">
            <com.app.feish.application.customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent5"
                android:textSize="16dp"
                android:text="About Doctor"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"/>
            <com.app.feish.application.customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="14dp"
                android:id="@+id/aboutdoc"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:text=""
                android:layout_gravity="center"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:background="@color/transparent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.app.feish.application.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorAccent3"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:text="Appointment Id"/>
                <com.app.feish.application.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:id="@+id/appoid"
                    android:textColor="@color/darkblue"
                    android:textSize="14dp"
                    android:text=""/>
                <com.app.feish.application.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorAccent3"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:text="Clinic Name And Address"/>
                <com.app.feish.application.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:id="@+id/clinicadd"
                    android:textColor="@color/darkblue"
                    android:textSize="14dp"
                    android:text=""/>
                
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                
                <com.app.feish.application.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:text="Timing"/>
                <com.app.feish.application.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/appdate"
                    android:layout_gravity="center"
                    android:textColor="@color/colorAccent3"
                    android:textSize="16dp"
                    android:text=""/>
                <com.app.feish.application.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/apptime"
                    android:gravity="center"
                    android:textColor="@color/colorAccent3"
                    android:textSize="16dp"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.app.feish.application.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:text="Fee"/>
                <com.app.feish.application.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/docfee"
                    android:layout_gravity="center"
                    android:textColor="@color/colorAccent3"
                    android:textSize="16dp"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>
            </LinearLayout>

         

            <com.app.feish.application.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
                android:layout_marginTop="2dp"
            android:textColor="@color/colorAccent3"
            android:textSize="16dp"
            android:text="Booking Status"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_weight="8"
                android:layout_marginTop="2dp"
                android:id="@+id/statusll"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                       <View
                  android:layout_width="1dp"
                  android:background="@color/colorAccent5"
                  android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                      <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">
    <View
        android:layout_width="30dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorAccent5"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:text="Confirm"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        android:id="@+id/img_confirm"
        android:src="@drawable/empty_circle"
        />
</LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/colorAccent5"
                            android:layout_height="1dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="8dp"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-light"
                            android:text="Booked"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/img_booked"
                            android:layout_gravity="center"
                            android:src="@drawable/empty_circle"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/colorAccent5"
                            android:layout_height="1dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="8dp"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-light"
                            android:text="Reschedule"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/img_reschudule"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/empty_circle"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/colorAccent5"
                            android:layout_height="1dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="8dp"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-light"
                            android:text="Cancel"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/img_cancel"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/empty_circle"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="4dp"
                    android:id="@+id/llresh"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.app.feish.application.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:text="Reschedule Timing"/>
                    <com.app.feish.application.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/appredate"
                        android:layout_gravity="center"
                        android:textColor="@color/colorAccent3"
                        android:textSize="16dp"
                        android:text="12 May 2018"/>
                    <com.app.feish.application.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/appretime"
                        android:gravity="center"
                        android:textColor="@color/colorAccent3"
                        android:textSize="16dp"
                        android:text="04:30 PM - 08:30 PM"/>
                </LinearLayout>

            </LinearLayout>

            <com.app.feish.application.customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="10dp"
                android:id="@+id/res"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="4dp"
                android:id="@+id/viewprescription"
                android:layout_margin="10dp"
                app:cardElevation="2dp"
                android:layout_height="wrap_content"
           >

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="View Prescription"
                    android:background="@color/yellow"
                    android:layout_height="40dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/cardView"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded"
                    android:id="@+id/rldone"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/submitDetailsId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Done"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>