                    android:id="@+id/sercadd"
                    android:textColor="@color/white"
                    android:text=" Shop No-18, First Floor, B-Block Market, Sec-62, Noida, Uttar Pradesh "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/sermob"
