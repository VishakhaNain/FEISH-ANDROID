            android:layout_height="2dp"
            android:background="@color/green"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent3"
            android:text="Description :-"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/green"/>
        <com.app.feish.application.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:id="@+id/desc"
            android:layout_height="wrap_content"
            android:textColor="@color/likeblack"
            android:text="As one of the top pathology labs in  India, Dr Lal PathLabs has a very strong focus on hiring and retaining top quality manpower to drive our different departments within and outside the labs"/>
