<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorAccent5"
    android:gravity="center"
    android:tag="Bottom3"
    android:weightSum="10">

    <ImageView
        android:id="@+id/trash"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:src="@drawable/ic_delete_black_24dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Delete Item?"
        android:textColor="#fff"
        android:textSize="17sp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="4"
        android:background="@color/white"
        android:text="Yes,Delete"
        android:textColor="@color/colorAccent5" />
</LinearLayout>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:padding="4dp"
    app:cardElevation="8dp"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:id="@+id/rlmain"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >


    <TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:textColor="@android:color/white"
    android:text="name"
    android:textStyle="bold"
    android:gravity="center_vertical"
    android:padding="4dp"
    android:visibility="gone"
    android:id="@+id/name"
    android:background="@color/colorAccent"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <com.app.feish.application.customfonts.MyRegulerText
          android:layout_width="wrap_content"
          android:textSize="16dp"
          android:textStyle="bold"
          android:id="@+id/memname"
          android:textColor="@android:color/black"
          android:layout_height="wrap_content"
          android:text="Signs: "/>
      <TextView
          android:layout_width="wrap_content"
          android:textColor="@android:color/darker_gray"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:id="@+id/signnameunit"
          android:text="Blood Pressure (mm/hg)"/>

  </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.app.feish.application.customfonts.MyRegulerText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/relation"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Max Obs: "/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/maxob"
            android:text="120"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <com.app.feish.application.customfonts.MyRegulerText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/dieasename"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Min Obs: "/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/minob"
            android:text="120"/>

    </LinearLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.app.feish.application.customfonts.MyRegulerText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/stausyear"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Observation: "/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/totalob"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.app.feish.application.customfonts.MyRegulerText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/desc"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Remark: "/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/remark"
            android:text="Blood Pressure (mm/hg)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/treat"
        android:visibility="gone"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.app.feish.application.customfonts.MyRegulerText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/txt"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Is Cured:"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtrunn"
            android:text="Blood Pressure (mm/hg)"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llisrun"
        android:orientation="horizontal">
        <com.app.feish.application.customfonts.MyRegulerText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Is Running: "/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtiscu"
            android:text="Blood Pressure (mm/hg)"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
</com.daimajia.swipe.SwipeLayout>