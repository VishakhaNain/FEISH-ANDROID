<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="4dp"
    app:cardElevation="2dp"
    android:id="@+id/card_view"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.app.feish.application.customfonts.MyTextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:id="@+id/appid"
        android:background="@color/colorAccent3"
        android:text="Appointment ID :202"
        android:textColor="@color/white"/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/ll"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:src="@drawable/doctor_images"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent3"
            android:textSize="16dp"
            android:text="Disease Name"
            android:id="@+id/diname"
            android:layout_height="wrap_content" />
        <com.app.feish.application.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:id="@+id/waittime"
            android:layout_marginTop="2dp"
            android:drawableTint="@android:color/black"
            android:text="Wait Time : 20 min"
            android:layout_height="wrap_content" />
        <com.app.feish.application.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:text="Time Spend :15 min"
            android:id="@+id/timespend"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content" />

        <com.app.feish.application.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:text="Payment Recived : Cash"
            android:textColor="@color/red"
            android:id="@+id/paymentmode"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>