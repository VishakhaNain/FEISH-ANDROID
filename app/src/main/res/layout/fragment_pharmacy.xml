<android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:layout_margin="5dp"
        android:id="@+id/addsigns"
        android:background="@drawable/border"
        android:orientation="vertical">

        <com.app.feish.application.customfonts.MyRegulerText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent3"
            android:textSize="16dp"
            android:padding="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Add Pharmacy"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/form"
            android:layout_below="@+id/header"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:background="@color/colorAccent"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:layout_height="40dp" />
                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/phaname"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pharmacy Name"
                    android:inputType="text"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:background="@color/colorAccent"
                    android:src="@android:drawable/sym_action_call"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:layout_height="40dp" />
                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/phaphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter mob no"
                    android:textSize="14dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:padding="8dp"
                    android:background="@color/colorAccent"
                    android:src="@drawable/ic_email_black_24dp"
                    android:tint="@color/white"
                    android:layout_height="40dp" />
                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/phaemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter email id"
                    android:inputType="textEmailAddress"
                    android:textSize="14dp"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />
            </LinearLayout>
            <com.app.feish.application.customfonts.MyRegulerText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent3"
                android:textSize="16dp"
                android:padding="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Address"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:background="@color/colorAccent"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:layout_height="40dp" />
                <Spinner
                    android:id="@+id/state_spinner"
                    android:entries="@array/state_spinner"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:background="@color/colorAccent"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:layout_height="40dp" />
                <Spinner
                    android:id="@+id/city_spinner"
                    android:entries="@array/city_spinner"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:background="@color/colorAccent"
                    android:padding="8dp"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/white"
                    android:layout_height="40dp" />
                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/phafulladdressID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:hint="Full Address"
                    android:inputType="text"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:background="@color/colorAccent"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:layout_height="40dp" />
                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/phalocalityID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Locality"
                    android:textSize="14dp"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:background="@color/colorAccent"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:layout_height="40dp" />
                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/phapincodeID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pincode"
                    android:textSize="14dp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:background="@color/colorAccent"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:layout_height="40dp" />
                <Spinner
                    android:id="@+id/cou_spinner"
                    android:entries="@array/con_spinner"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/btn_addpharmacy"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/btn_addpharmacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Add Pharmacy"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>