<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <android.support.v7.widget.CardView android:id="@+id/cardId5"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            xmlns:android="http://schemas.android.com/apk/res/android"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:background="@drawable/border"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Prescription Name"
                        android:layout_gravity="center"
                        android:textColor="@color/darkblue"
                        />
                </TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/ic_confirmation_number_black_24dp"
                        android:tint="@color/white"
                        android:padding="8dp"
                        android:layout_height="40dp" />
                    <com.app.feish.application.customfonts.MyEditText
                        android:id="@+id/prename"
                        android:hint="Prescription Name"
                        android:textSize="14dp"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/black"
                        android:textColor="#000"
                        android:background="@color/transparent"
                        android:padding="12dp"
                        android:drawablePadding="16dp"
                        />
                </LinearLayout>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Disease Name"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/darkblue"
                        />

                </TableRow>
                <EditText
                    android:id="@+id/disease_name"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:layout_height="50dp"
                    />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medicine Name"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/darkblue"
                        />

                </TableRow>
                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/medname"
                    android:hint=""
                    android:textSize="14dp"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medicine Type"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/darkblue"
                        />
                </TableRow>

                <Spinner
                    android:id="@+id/medtype_spinner"
                    android:entries="@array/med_type"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:layout_height="50dp"
                    />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Power"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/darkblue"
                        />
                </TableRow>
                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/medpower"
                    android:textSize="14dp"

                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />




                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:layout_marginLeft="5dp"
                        android:text="Unit Quantity"
                        android:layout_weight="1"
                        />

                </TableRow>

                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/unitquantity"
                    android:hint=""
                    android:textSize="14dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:layout_marginLeft="5dp"
                        android:text="Total Quantity"
                        android:layout_weight="1"
                        />

                </TableRow>

                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/totalquantity"
                    android:hint=""
                    android:textSize="14dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />



                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/darkblue"
                        />

                </TableRow>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content">

                    <CheckBox
                        android:id="@+id/checkBox_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning" />



                    <CheckBox
                        android:id="@+id/checkBox_n"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Night" />
                    <CheckBox
                        android:id="@+id/checkBox_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon" />
                    <CheckBox
                        android:id="@+id/checkBox_e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening" />

                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_height="wrap_content"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/darkblue"
                        />




                </TableRow>
                <RadioGroup
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ingestiontime"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content">
                    <RadioButton
                        android:id="@+id/radio_bm"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Before Meal"/>

                    <RadioButton
                        android:id="@+id/radio_am"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="After Meal"/>


                </RadioGroup>

                <com.app.feish.application.customfonts.MyEditText
                    android:id="@+id/medesc"
                    android:hint="Description"
                    android:layout_marginTop="10dp"
                    android:lines="4"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/black"
                    android:textColor="#000"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:drawablePadding="16dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Save"
                    android:id="@+id/save"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded"/>




            </TableLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
