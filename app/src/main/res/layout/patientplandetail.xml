<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/lightgray"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/drname"
                android:padding="4dp"
                android:text=""/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:id="@+id/drspeciality"
                android:textSize="13dp"
                android:gravity="center"
                android:padding="4dp"
                android:text=""/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/planname"
        android:padding="4dp"
        android:text=""/>
<TableLayout
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/remaining_visits"
            android:layout_weight="0.3"
            android:padding="4dp"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textSize="13dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Pending Visit"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="0.3"
            android:id="@+id/used_visit"
            android:padding="4dp"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textSize="13dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Used Visit"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="0.3"
            android:padding="4dp"
            android:id="@+id/totalvisit"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textSize="13dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Total Visit"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/puple"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="0.3"
            android:padding="4dp"
            android:id="@+id/price"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textSize="13dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="/-"/>
    </TableRow>
</TableLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        android:visibility="gone"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/colorAccent1"
            android:padding="4dp"
            android:fontFamily="cursive"
            android:textSize="18dp"
            android:text="More Info"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
